    "data": {
        "url": "https://raw.githubusercontent.com/swil0067/Assignment2/main/data/vaccine_regions.csv",
        "format": {
            "type": "csv",
            "parse": {
                "date": "date:'%d/%m/%Y'"
            }
        }
    },
    "encoding": {
