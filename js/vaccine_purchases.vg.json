{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height": 250,
    "width": 450,
    "background": "rgb(223, 247, 255)",
    "autosize": "none",
    "layer": [
        {
            "projection": {
                "type": "equalEarth"
            },
            "data": {
                "url": "https://raw.githubusercontent.com/swil0067/Assignment2/main/js/ne_110m_admin_0_countries.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/swil0067/Assignment2/main/data/vaccine_purchases_data.csv"
            },
            "projection": {
                "type": "equalEarth"
            },
            "mark": "circle",
            "params": [
                {
                    "name": "hello",
                    "select": {
                        "type": "point",
                        "fields": [
                            "income_level"
                        ]
                    },
                    "bind": "legend"
                }
            ],
            "encoding": {
                "tooltip": [
                    {
                        "field": "country",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "doses_per_capita",
                        "type": "quantitative",
                        "title": "Doses Purchased"
                    },
                    {
                        "field": "income_level",
                        "type": "nominal"
                    }
                ],
                "longitude": {
                    "field": "Longitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "Latitude",
                    "type": "quantitative"
                },
                "size": {
                    "field": "doses_per_capita"
                },
                "color": {
                    "field": "income_level",
                    "type": "nominal",
                    "scale": {
                        "scheme": "set1"
                    }
                }
            }
        }
    ]
}