{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "COVID-19 Vaccinations",
    "width": 800,
    "height": 400,
    "projection": {
        "type": "equalEarth"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/swil0067/Assignment2/9e68e375bb71dab32f99ccba63401cf35f96cf44/js/ne_110m.json",
        "format": {
            "type": "topojson",
            "feature": "ne_110m"
        }
    },
    "transform": [
        {
            "lookup": "properties.NAME",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/swil0067/Assignment2/9e68e375bb71dab32f99ccba63401cf35f96cf44/data/Worldwide%20Vaccine%20Data.csv"
                },
                "key": "Country",
                "fields": [
                    "per_pop_vacc"
                ]
            }
        },
        {
            "calculate": "datum.per_pop_vacc + 0.1",
            "as": "per_pop_vacc"
        }
    ],
    "mark": {
        "type": "geoshape"
    },
    "encoding": {
        "color": {
            "field": "per_pop_vacc",
            "type": "quantitative",
            "scale": {
                "type": "linear"
            }
        },
        "tooltip": [
            {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
            },
            {
                "field": "per_pop_vacc",
                "type": "quantitative"
            }
        ]
    }
}