{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "COVID-19 Vaccinations",
    "width": 800,
    "height": 400,
    "projection": {
        "type": "equalEarth"
    },
    "data": {
        "url": "https://github.com/swil0067/Assignment2/blob/5b78fa99bb616bd344912d476fe4c4fdca046cf4/js/ne_110m.json",
        "format": {
            "type": "topojson",
            "feature": "ne_110m"
        }
    },
    "transform": [
        {
            "lookup": "properties.NAME",
            "from": {
                "data": {
                    "url": "https://github.com/swil0067/Assignment2/blob/5b78fa99bb616bd344912d476fe4c4fdca046cf4/data/owid-covid-data.csv"
                },
                "key": "location",
                "fields": [
                    "total_vaccinations"
                ]
            }
        },
        {
            "calculate": "datum.Active + 0.1",
            "as": "Vaccinations"
        }
    ],
    "mark": {
        "type": "geoshape"
    },
    "encoding": {
        "color": {
            "field": "Vaccinations",
            "type": "quantitative",
            "scale": {
                "type": "log"
            }
        },
        "tooltip": [
            {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
            },
            {
                "field": "Vaccinations",
                "type": "quantitative"
            }
        ]
    }
}